<div class="wrap">


	<div class="container">

		<div class="jumbotron text-center">


                <%= link_to image_tag("logo.png", :class => "img-center img-responsive"), root_path %>

			<h2>Envíos a todo México de productos locales auténticos de cada Estado.</h2>

			<div class="row" style="margin-top:40px">
				<div class="col-md-4 col-md-offset-2" style="margin-top:10px">
					<%= link_to "Haz tu pedido", "/#pedidos", class: "ani-link btn btn-lg btn-primary", :target => "_parent" %>
				</div>
				<div class="col-md-4" style="margin-top:10px">
					<%= link_to "¿Alguna duda?", "/#faqs", class: "ani-link btn btn-lg btn-primary", :target => "_parent"%>
				</div>
			</div>

		</div>

		<div class="main-content">
			<div class="text-center">
				<h1><%= @post.title %></h1>
				<h4>By: <%= link_to  @post.admin_user.name, author_path(@post.admin_user) %></h4>

			</div>

			<div class="bottom-buffer">
				
			</div>

			

			<div class="row">
				<div class="col-md-12">
					<%= markdown @post %>
				</div>
			</div>


		</div> <!-- /main-content -->


	</div> <!-- /container -->




</div> <!-- /wrap  -->